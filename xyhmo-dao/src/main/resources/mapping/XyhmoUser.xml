<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xyhmo.dao.XyhmoUserDao" >
  <resultMap id="BaseResultMap" type="com.xyhmo.domain.XyhmoUser" >
      <id column="id" property="id" />
      <result column="pin" property="pin" />
      <result column="mobile" property="mobile" />
  </resultMap>
  <sql id="allColumns">
	id,pin,mobile
  </sql>
  <select id="selectUserByPin" parameterType="String"  resultMap="BaseResultMap">
	   SELECT
       <include refid="allColumns" />
	   FROM xyhmo_user
       WHERE pin = #{pin}
  </select>
	
  
</mapper>